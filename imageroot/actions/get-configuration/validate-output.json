{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "configure-module input",
    "$id": "http://schema.nethserver.org/sogo/configure-module-input.json",
    "description": "Configure matomo",
    "examples": [
        {
            "matomo_database_username": "user",
            "matomo_database_password": "",
            "host": "matomo.domain.org",
            "matomo_database_dbname": "matomo",
            "mariadb_auto_upgrade": "1,0",
            "mariadb_disable_upgrade_backup": "1,0",
            "matomo_database_tables_prefix": "matomo",
            "matomo_database_adapter": "mysql"
        }
    ],
    "type": "object",
    "properties": {
        "mysql_password": {
            "type": "string"
        },
        "matomo_database_username": {
            "type": "string"
        },
        "matomo_database_password": {
            "type": "string"
        },
        "matomo_database_dbname": {
            "type": "string"
        },
        "lets_encrypt": {
            "type": "boolean"
        },
        "host": {
            "type": "string"
        },
        "mariadb_auto_upgrade": {
            "type": "boolean"
        },
        "mariadb_disable_upgrade_backup": {
            "type": "boolean"
        },
        "matomo_database_tables_prefix": {
            "type": "boolean"
        },
        "matomo_database_adapter": {
            "type": "boolean"
        }
    },
    "required": [
        "host"
    ]
}